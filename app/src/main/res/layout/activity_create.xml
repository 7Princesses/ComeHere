<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateActivity"
    android:background="#FFFFFFFF">

    <ScrollView
        android:id="@+id/first_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--btn_capture : 사진 촬영-->
                <Button
                    android:id="@+id/btn_capture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사진"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:id="@+id/second_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbars="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/test"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/iv_result"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />
                        <ImageView
                            android:id="@+id/iv_result2"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                        <ImageView
                            android:id="@+id/iv_result3"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />
                        <ImageView
                            android:id="@+id/iv_result4"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                        <ImageView
                            android:id="@+id/iv_result5"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />
                        <ImageView
                            android:id="@+id/iv_result6"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!---->

            <EditText
                android:id="@+id/productTitle"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:hint="  상품명"
                android:textColor="#FF707070"
                android:background="@drawable/rounded_input"/>

            <EditText
                android:id="@+id/totalPrice"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:hint="  총 가격"
                android:textColor="#FF707070"
                android:background="@drawable/rounded_input"/>

            <EditText
                android:id="@+id/productLink"
                android:autoLink="web"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:inputType="textWebEditText"
                android:hint="  URL"
                android:textColor="#FF707070"
                android:drawableLeft="@drawable/link"
                android:background="@drawable/rounded_input"/>

            <Spinner
                android:id="@+id/positionSpinner"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/position_spinner_bg"/>

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/count_spinner"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_bg"/>

                <Spinner
                    android:id="@+id/spinner_unit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/spinner_bg"/>

            </LinearLayout>

            <EditText
                android:id="@+id/id4"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:inputType="text|textMultiLine"
                android:hint="  내용을 입력해주세요."
                android:minLines="3"
                android:scrollbars="vertical"
                android:maxLength="1000"
                android:background="@drawable/rounded_input"
                />

            <Button
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/rounded_edittext_button"
                android:text="글 게시하기"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:id="@+id/postButton"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>