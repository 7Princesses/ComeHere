<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateActivity"
    android:background="#FFFFFFFF">

    <ScrollView
        android:id="@+id/first_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/create" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="글 작성"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/productTitle"
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:hint="  상품명"
                android:textColorHint="#FF707070"
                android:textSize="13dp"
                android:textColor="#FF707070"
                android:background="@drawable/rounded_input"/>

            <EditText
                android:id="@+id/totalPrice"
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:hint="  총 가격"
                android:textColorHint="#FF707070"
                android:textSize="13dp"
                android:textColor="#FF707070"
                android:background="@drawable/rounded_input"/>

            <EditText
                android:id="@+id/productLink"
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:autoLink="web"
                android:background="@drawable/rounded_input"
                android:drawableLeft="@drawable/link"
                android:hint="  URL"
                android:inputType="textWebEditText"
                android:textColorHint="#FF707070"
                android:padding="12dp"
                android:textColor="#FF707070"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:background="@drawable/rounded_input"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/point"
                    android:layout_gravity="center"
                    />

                <Spinner
                    android:id="@+id/positionSpinner"
                    android:gravity="center"
                    android:layout_width="295dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:textSize="13dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:background="@drawable/rounded_input"
                android:gravity="center">

                <Spinner
                    android:id="@+id/categorySpinner"
                    android:layout_width="307dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:textSize="13dp"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rounded_input"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/count_spinner"
                        android:layout_width="140dp"
                        android:layout_height="45dp"
                        android:layout_gravity="right"
                        android:textSize="13dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rounded_input"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/spinner_unit"
                        android:layout_width="140dp"
                        android:layout_height="45dp"
                        android:layout_gravity="right"
                        android:textSize="13dp"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_capture"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button"
                    android:padding="17dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/camera2" />

                <HorizontalScrollView
                    android:id="@+id/second_scroll"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_result1"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />

                        <ImageView
                            android:id="@+id/iv_result2"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />

                        <ImageView
                            android:id="@+id/iv_result3"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />

                        <ImageView
                            android:id="@+id/iv_result4"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />

                        <ImageView
                            android:id="@+id/iv_result5"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />

                        <ImageView
                            android:id="@+id/iv_result6"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />

                        <ImageView
                            android:id="@+id/iv_result7"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />

                        <ImageView
                            android:id="@+id/iv_result8"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />

                        <ImageView
                            android:id="@+id/iv_result9"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />

                        <ImageView
                            android:id="@+id/iv_result10"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <EditText
                android:id="@+id/productContent"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="text|textMultiLine"
                android:hint="  내용을 입력해주세요."
                android:textSize="15dp"
                android:minLines="10"
                android:textColorHint="#FF707070"
                android:scrollbars="vertical"
                android:maxLength="1000"
                android:padding="15dp"
                android:background="@drawable/rounded_input"
                />

            <Button
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/rounded_edittext_button"
                android:text="글 게시하기"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:id="@+id/postButton"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>